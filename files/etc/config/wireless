# files/etc/config/wireless 通用模板
config wifi-device 'radio0'
    option type 'mac80211'
    option channel 'auto'
    option hwmode '11g'
    option htmode 'HT20'
    option country 'AU'
    option txpower '0'  # 自动最大功率
    option disabled '0'

config wifi-iface 'default_radio0'
    option device 'radio0'
    option network 'lan'
    option mode 'ap'
    option ssid '${WIFI_SSID}'
    option encryption 'psk2'
    option key '${WIFI_PASSWORD}'
    option ieee80211k '1'
    option ieee80211v '1'
    option ieee80211r '1'

config wifi-device 'radio1'
    option type 'mac80211'
    option channel 'auto'
    option hwmode '11a'
    option htmode 'VHT80'
    option country 'AU'
    option txpower '0'
    option disabled '0'

config wifi-iface 'default_radio1'
    option device 'radio1'
    option network 'lan'
    option mode 'ap'
    option ssid '${WIFI_SSID}'
    option encryption 'psk2'
    option key '${WIFI_PASSWORD}'
    option ieee80211k '1'
    option ieee80211v '1'
    option ieee80211r '1'
